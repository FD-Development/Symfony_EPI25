{% extends 'base.html.twig' %}

{% block content %}
    <h1>{% block form_title %}{% endblock %}</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="d-grid gap-2 col-4 mx-auto">
        <div class="form-group row float-sm-right">
            <input type="submit" value="{% block form_submit_value %}{% endblock %}" class="btn btn-primary" />
        </div>
        <div class="form-group row float-sm-left">
            <a href="{% block form_return_url %}{% endblock %}" class="btn btn-secondary">
                {% block form_return_button %}{% endblock %}
            </a>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

