{% extends 'base.html.twig' %}

{% block content %}


{% if listings is defined and listings %}
    <table class="table">
     <thead>
         <tr>
             <th scope="col">{{ 'label.title'|trans }}</th>
             <th scope="col">{{ 'label.activated'|trans }}</th>
         </tr>
     </thead>

     <tbody>
        {% for listing in listings %}
            <tr>
                <td>{{ listing.title }}</td>
                <td>{{ listing.activatedAt|date('d.m.Y') }}</td>
            </tr>
        {% endfor %}
     </tbody>
    </table>

{% else %}
    <p>{{ 'message.empty_list'|trans }}</p>
{% endif %}

{% endblock %}