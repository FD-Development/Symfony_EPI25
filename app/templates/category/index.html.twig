{% extends 'base.html.twig' %}

{% block content %}

    <div class="row m-4">
    <div class="navigation text-center m-3 col">
        <a class="btn btn-primary" href="{{ url('category_create') }}" >{{ 'action.category_create'|trans }}</a>
    </div>

{% if categories is defined and categories %}
<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">{{ 'label.title'|trans }}</th>
            <th scope="col">{{ 'label.options'|trans }}</th>
        </tr>
    </thead>

    <tbody class=" col align-items-center">
    {% for category in categories %}
        <tr>
            <td style="width: 40%"><a class="py-auto fs-4 text fw-bold text-decoration-none">{{ category.title }}</a></td>
            <td style="width: fit-content">
                <div class="d-flex flex-column flex-md-row justify-content-center gap-2 my-2 mx-auto p-3 bg-dark bg-opacity-10 border border-info" style="width: fit-content">
                    <a class="btn btn-primary" href="{{ url('category_update', {id:category.id}) }}" >{{ 'action.category_update'|trans }}</a>
                    <a class="btn btn-danger" href="{{ url('category_delete', {id:category.id}) }}" >{{ 'action.category_delete'|trans }}</a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
    <p>{{ 'message.empty_list'|trans }}</p>
{% endif %}

{% endblock %}