{% extends 'base.html.twig' %}

{% block content %}

{% if categories is defined and categories %}
<table class="table">
    <thead>
        <tr>
            <th scope="col">{{ 'label.title'|trans }}</th>
        </tr>
    </thead>

    <tbody>
    {% for category in categories %}
        <tr>
            <td>{{ category.title }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
    <p>{{ 'message.empty_list'|trans }}</p>
{% endif %}

{% endblock %}